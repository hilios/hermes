= render 'page_header'

- case @resource.asset.class
- when Asset::Static
  %p
    %h3
      - case @resource.asset.file.content_type
      - when /^image\/(.+)$/
        Image
  %p
    URL:
    %code= @resource.uri
  %p.well
    %img{:src => preview_website_resource_path(current_website, @resource)}
- when Asset::Folder
  %p
    %h3
      Folder:
      = @resource.urn
  %table.table.table-striped
    %thead
      %tr
        %th= Resource.model_name.human.pluralize
    %tbody
      - @resource.children.each do |resource|
        %tr
          %td
            %code= resource.uri
      - if @resource.children.empty?
        %tr
          %td{:colspan => 2}
            %i.icon-exclamation-sign
            Empty result
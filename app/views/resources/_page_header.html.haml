.page-header
  .pull-right
    - if not action_is? :index
      = link_to website_resources_path(current_website), class: 'btn' do
        %i.icon-arrow-left.icon-white
        Back
    - if action_is? :index
      .btn-group
        / = link_to new_folder_path,    class: 'btn' do
        /   = Asset::Folder.model_name.human
        / = link_to new_static_path,    class: 'btn' do
        /   = Asset::Static.model_name.human
        / = link_to new_template_path,  class: 'btn' do
        /   = Asset::Template.model_name.human

  %h1
    = current_website.name
    = Resource.model_name.human.titleize.pluralize.downcase
  
= flash_messages